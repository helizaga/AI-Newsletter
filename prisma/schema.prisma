datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:password@localhost:5433/ainewsletter"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              Int           @id @default(autoincrement())
  userEmail       String        @unique
  name            String?
  newsletters     Newsletter[]
  emailsToSendTo  Json
}

model Newsletter {
  id              Int          @id @default(autoincrement())
  title           String
  content         String
  sentDate        DateTime
  userId          Int
  searchTerm      String
  reason          String
  user            User         @relation(fields: [userId], references: [id])
  usedArticles    UsedArticle[]
}

model UsedArticle {
  id              Int        @id @default(autoincrement())
  url             String
  newsletterId    Int
  createdAt       DateTime  @default(now())
  newsletter      Newsletter @relation(fields: [newsletterId], references: [id])
}