datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String        @id @default(uuid())
  userEmail       String       @unique
  name            String?
  newsletters     Newsletter[]
  emailsToSendTo  Json
}


model Newsletter {
  id              Int          @id @default(autoincrement())
  regenerateCount Int          @default(0)
  title           String
  content         String       
  sentDate        DateTime     @default(now())
  userId          String
  topic           String
  reason          String
  searchQuery     String?
  contentHistory  ContentHistory[]  
  user            User         @relation(fields: [userId], references: [id])
  usedArticles    UsedArticle[] @relation("UsedArticleToNewsletter")
}

model UsedArticle {
  id              Int        @id @default(autoincrement())
  url             String
  newsletterId    Int
  createdAt       DateTime  @default(now())
  userId          String
  topic           String
  reason          String
  @@unique([url, userId, topic, reason])
  newsletter      Newsletter @relation("UsedArticleToNewsletter", fields: [newsletterId], references: [id], onDelete: Cascade)
}

model ContentHistory {
  id              Int        @id @default(autoincrement())
  newsletterId    Int
  content         String
  createdAt       DateTime   @default(now())
  newsletter      Newsletter @relation(fields: [newsletterId], references: [id], onDelete: Cascade)
}