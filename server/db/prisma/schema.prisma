datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:password@localhost:5433/ainewsletter"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String        @id @default(uuid())
  userEmail       String       @unique
  name            String?
  newsletters     Newsletter[]
  emailsToSendTo  Json
}


model Newsletter {
  id              Int          @id @default(autoincrement())
  title           String
  content         String       
  sentDate        DateTime     @default(now())
  userId          String
  topic           String
  reason          String
  searchQuery     String?
  history         NewsletterHistory[]
  user            User         @relation(fields: [userId], references: [id])
  usedArticles    UsedArticle[] @relation("UsedArticleToNewsletter")
}

model UsedArticle {
  id              Int        @id @default(autoincrement())
  url             String
  newsletterId    Int
  createdAt       DateTime  @default(now())
  newsletter      Newsletter @relation("UsedArticleToNewsletter", fields: [newsletterId], references: [id], onDelete: Cascade)
}

model NewsletterHistory {
  id              Int          @id @default(autoincrement())
  newsletterId    Int
  content         String
  sentDate        DateTime     @default(now())
  newsletter      Newsletter   @relation(fields: [newsletterId], references: [id], onDelete: Cascade)
}